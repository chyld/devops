alias l='exa -lFa --git'
alias h='history'
alias c='clear'
alias b='cd ..'
alias g='git'
alias d='docker'
alias dc='docker-compose'
alias cat='bat'
alias jc='jupyter console'
alias lg='lazygit'
alias gf='git-fuzzy'
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -Iv'
alias vi='nvim'
alias w='curl wttr.in?M1qF'
alias df='df -Th'

